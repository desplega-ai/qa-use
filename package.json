{
  "name": "@desplega.ai/qa-use",
  "version": "2.8.4",
  "packageManager": "bun@^1.3.4",
  "description": "QA automation tool for browser testing with MCP server support",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "qa-use": "./bin/qa-use.js"
  },
  "files": [
    "dist",
    "lib",
    "bin",
    "README.md",
    "server.json",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "cli": "tsx src/cli/index.ts",
    "dev": "tsx src/index.ts",
    "start": "bun run build && node dist/src/index.js",
    "inspector": "bun run build && npx -y @modelcontextprotocol/inspector node dist/src/index.js",
    "inspector:env": "bun run build && npx dotenv-cli -e .env -- npx -y @modelcontextprotocol/inspector node dist/src/index.js",
    "format": "biome format --write src lib",
    "format:check": "biome format src lib",
    "lint": "biome lint src lib && oxlint src lib",
    "lint:fix": "biome lint --write src lib && oxlint src lib --fix",
    "check": "biome check src lib",
    "check:fix": "biome check --write src lib",
    "typecheck": "tsc --noEmit",
    "test": "bun test --preload ./test-setup.ts",
    "test:unit": "node scripts/test-unit.js",
    "test:integration": "node scripts/test-integration.js",
    "test:coverage": "bun test --coverage --preload ./test-setup.ts",
    "generate:readme": "node scripts/generate-readme-tools.js",
    "generate:types": "tsx scripts/generate-types.ts",
    "release": "bun scripts/release.ts",
    "prepublishOnly": "bun run build && bun lint && bun typecheck",
    "cc:validate": "claude plugin validate ."
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "qa-testing",
    "playwright",
    "testing"
  ],
  "author": {
    "name": "tarasyarema",
    "email": "t@desplega.ai",
    "url": "https://github.com/desplega-ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/desplega-ai/qa-use.git"
  },
  "homepage": "https://github.com/desplega-ai/qa-use",
  "bugs": {
    "url": "https://github.com/desplega-ai/qa-use/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/express": "^5.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.14",
    "@types/ws": "^8.18.1",
    "@vercel/node": "^3.2.23",
    "dotenv-cli": "^7.4.2",
    "ignore": "^7.0.5",
    "json-schema-to-typescript": "^15.0.4",
    "oxlint": "^1.42.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@desplega.ai/localtunnel": "^2.2.0",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "axios": "^1.12.2",
    "commander": "^14.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "glob": "^13.0.0",
    "playwright": "1.55.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2"
  }
}
